<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".fragments.ResultInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
android:id="@+id/resultCard"
                android:layout_marginBottom="16dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <!-- Title -->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Natija Tafsilotlari"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingBottom="6dp"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 Ism: Dostonbek Rasulov"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎂 Yoshi: 23"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📄 Test Turi: IELTS"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👨‍🏫 Ustoz: Jasur Akmalov"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📚 Fan: Ingliz Tili"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"/>



                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Natija fayli"
                    android:layout_marginTop="8dp"
                    />
            </LinearLayout>

        <!-- Back Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/backButton"
            android:layout_width="120dp"
            android:layout_height="40dp"

            android:backgroundTint="@color/mainColor"

            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/resultCard"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_margin="16dp"
            >
            <TextView
                android:text="Ortga qaytish"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>